{
    "extends": "@oclif/tslint",
    "rules": {
        "semicolon": [true, "always"],
        "indent": [true, "spaces", 4],
        "ter-indent": [true, 4],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "ignore"
                },
                "esSpecCompliant": true
            }
        ],
        "no-unnecessary-class": ["allow-static-only"]
    }
}
